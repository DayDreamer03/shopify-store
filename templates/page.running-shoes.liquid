<div class="running-shoes-grid">
  <style>
    .running-shoes-grid {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    .table {
      display: grid;
      grid-template-columns: 1fr repeat(3, 1fr); /* 1 column for brands, 3 for distances */
      gap: 20px;
    }

    .table-header {
      text-align: center;
      font-weight: bold;
      text-transform: uppercase;
      padding: 10px 0;
    }

    .brand-cell {
      font-size: 20px;
      font-weight: bold;
      text-transform: uppercase;
      border-right: 2px solid #000;
      padding: 10px;
      text-align: center;
    }

    .distance-cell {
      text-align: center;
    }

    .product-card {
      display: inline-block;
      text-align: center;
      margin-bottom: 10px;
    }

    .product-card img {
      width: 100%;
      max-width: 150px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .product-card p {
      font-size: 14px;
      color: #555;
    }

    @media (max-width: 768px) {
      .table {
        grid-template-columns: 1fr; /* Stack all columns on mobile */
      }

      .brand-cell {
        border-right: none;
      }
    }
  </style>

  <h1>Running Shoes</h1>

  {% assign brands = 'nike,newbalance' | split: ',' %}
  {% assign distances = '42k,10k,training' | split: ',' %}

  <!-- Table Header -->
  <div class="table">
    <div></div>
    <!-- Empty cell for the top-left corner -->
    {% for distance in distances %}
      <div class="table-header">{{ distance | upcase }}</div>
    {% endfor %}

    <!-- Table Body -->
    {% for brand in brands %}
      <div class="brand-cell">{{ brand | capitalize }}</div>
      {% for distance in distances %}
        <div class="distance-cell">
          {% assign products = collections.all.products %}
          {% assign filtered_products = '' %}
          {% for product in products %}
            {% if product.tags contains 'brand-#{brand}' and product.tags contains 'distance-#{distance}' %}
              {% assign filtered_products = filtered_products | append: product.id | append: ',' %}
            {% endif %}
          {% endfor %}

          {% assign filtered_product_ids = filtered_products | split: ',' | uniq %}

          {% if filtered_product_ids.size > 1 %}
            {% for product in products %}
              {% if filtered_product_ids contains product.id %}
                <div class="product-card">
                  <a href="{{ product.url }}">
                    <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
                    <p>{{ product.title }}</p>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          {% else %}
            <p>No products available</p>
          {% endif %}
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>
