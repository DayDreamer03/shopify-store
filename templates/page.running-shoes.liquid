<div class="running-shoes-grid">
  <style>
    .running-shoes-grid {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    .image-section {
      width: 100%;
      height: 300px; /* Adjust the height as needed */
      background-image: url('{{ 'shoes-image.jpg' | asset_url }}');
      background-size: cover;
      background-position: center;
      margin-bottom: 20px;
    }

    .table {
      display: grid;
      grid-template-columns: 1fr repeat(3, 1fr); /* One column for brands, three for distances */
      gap: 20px;
    }

    .table-header {
      text-align: center;
      font-weight: bold;
      text-transform: uppercase;
      padding: 10px 0;
      grid-column: span 1; /* Ensure headers span one column */
    }

    .brand-cell {
      font-size: 20px;
      font-weight: bold;
      text-transform: uppercase;
      border-right: 2px solid #000;
      padding: 10px;
      text-align: center;
      grid-column: 1; /* Ensure brand names are in the first column */
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .brand-logo {
      max-width: 100px; /* Adjust the size of the logo */
      height: auto;
    }

    .distance-cell {
      text-align: center;
      font-size: 20px;
      font-weight: bold;
      text-transform: uppercase;
    }

    .product-card {
      display: inline-block;
      text-align: center;
      margin-bottom: 10px;
    }

    .product-card img {
      width: 100%;
      max-width: 200px; /* Smaller image size */
      height: auto; /* Maintain aspect ratio */
      border: none; /* Remove outline */
      border-radius: 5px;
    }

    .product-card a {
      text-decoration: none;
    }

    .product-card p {
      font-size: 14px;
      color: #000;
    }
  </style>

  <div class="image-section"></div>

  <h1>Running Shoes</h1>

  {% assign brands = 'nike,newbalance' | split: ',' %}
  {% assign distance_names = '42K / 21K,10K / 5K,TRAINING' | split: ',' %}
  {% assign distances = '42k,10K,training' | split: ',' %}

  <div class="table">
    <!-- Distance Headers -->
    <div class="table-header"></div>
    {% for distance in distance_names %}
      <div class="table-header" style="grid-column: {{ forloop.index | plus: 1 }}">{{ distance | upcase }}</div>
    {% endfor %}

    <!-- Table Body -->
    {% for brand in brands %}
      <div class="brand-cell">
        <img
          src="{{ 'logo-' | append: brand | append: '.png' | asset_url }}"
          alt="{{ brand | capitalize }}"
          class="brand-logo"
        >
      </div>
      {% for distance in distances %}
        <div class="distance-cell">
          {% assign filtered_products = false %}
          {% for product in collections.shoes.products %}
            {% assign brand_tag = 'brand-' | append: brand %}
            {% assign distance_tag = 'distance-' | append: distance %}
            {% if product.tags contains brand_tag and product.tags contains distance_tag %}
              <div class="product-card">
                <a href="{{ product.url }}">
                  <img
                    src="{{ product.featured_image | img_url: '300x300' }}"
                    alt="{{ product.title }}"
                    width="100"
                    height="auto"
                  >
                  <p>{{ product.title }}</p>
                </a>
                <p>{{ product.price | money_with_currency }}</p>
              </div>
              {% assign filtered_products = true %}
            {% endif %}
          {% endfor %}
          {% unless filtered_products %}
            <p>No products available</p>
          {% endunless %}
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>
