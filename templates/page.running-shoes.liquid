<div class="running-shoes-grid">
  <style>
    .running-shoes-grid {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    h1 {
      margin-bottom: 20px;
    }

    .image-section {
      width: 100%;
      height: 350px; /* Adjust the height as needed */
      object-fit: cover;
      object-position: center;
      margin-bottom: 20px;
    }

    .table {
      display: grid;
      grid-template-columns: 1fr repeat(3, 1fr); /* One column for brands, three for distances */
      gap: 10px;
    }

    .table-header {
      text-align: center;
      font-size: 20px;
      color: #000;
      text-transform: uppercase;
      padding: 10px 0;
      grid-column: span 1; /* Ensure headers span one column */
    }

    .brand-cell {
      font-size: 20px;
      font-weight: bold;
      text-transform: uppercase;
      border-right: 2px solid #000;
      padding: 10px;
      text-align: center;
      grid-column: 1; /* Ensure brand names are in the first column */
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .brand-logo {
      max-width: 50px; /* Adjust the size of the logo */
      height: auto;
    }

    .distance-cell {
      text-align: center;
      text-transform: uppercase;
    }

    .product-card {
      display: inline-block;
      text-align: center;
    }

    .product-card img {
      width: 100%;
      max-width: 200px; /* Smaller image size */
      height: auto; /* Maintain aspect ratio */
      border: none; /* Remove outline */
      border-radius: 5px;
    }

    .product-card a {
      text-decoration: none;
    }
  </style>

  <img
    class="image-section"
    src="{{ 'shoes-image.jpg' | asset_url }}"
  >

  <h1>SHOES</h1>

  {% assign brands = 'nike,newbalance' | split: ',' %}
  {% assign distance_names = '42K / 21K,10K / 5K,TRAINING' | split: ',' %}
  {% assign distances = '42k,10K,training' | split: ',' %}

  <div class="table">
    <!-- Distance Headers -->
    <div class="table-header"></div>
    {% for distance in distance_names %}
      <div class="table-header" style="grid-column: {{ forloop.index | plus: 1 }}">{{ distance | upcase }}</div>
    {% endfor %}

    <!-- Table Body -->
    {% for brand in brands %}
      <div class="brand-cell">
        <img
          src="{{ 'logo-' | append: brand | append: '.png' | asset_url }}"
          alt="{{ brand | capitalize }}"
          class="brand-logo"
        >
      </div>
      {% for distance in distances %}
        <div class="distance-cell">
          {% assign filtered_products = false %}
          {% for product in collections.shoes.products %}
            {% assign brand_tag = 'brand-' | append: brand %}
            {% assign distance_tag = 'distance-' | append: distance %}
            {% if product.tags contains brand_tag and product.tags contains distance_tag %}
              <div class="product-card">
                <h3
                  class="card__heading{% if product.featured_media or settings.card_style == 'standard' %} h5{% endif %}"
                  id="title-{{ section.id }}-{{ product.id }}"
                >
                  <a
                    href="{{ product.url }}"
                    id="CardLink-{{ section.id }}-{{ product.id }}"
                    class="full-unstyled-link"
                    aria-labelledby="CardLink-{{ section.id }}-{{ product.id }} Badge-{{ section.id }}-{{ product.id }}"
                  >
                    {{ product.title | escape }}
                  </a>
                </h3>
                {% render 'price', product: product, price_class: '', show_compare_at_price: true %}
              </div>
              {% assign filtered_products = true %}
            {% endif %}
          {% endfor %}
          {% unless filtered_products %}
            <p>No products available</p>
          {% endunless %}
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>
