<div class="custom-video-section">
  <video
    autoplay
    loop
    muted
    playsinline
    class="custom-video"
  >
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>

{% schema %}
{
  "name": "Custom Video Section",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile Video Height (vh)",
      "min": 20,
      "max": 100,
      "step": 1,
      "default": 35,
      "unit": "vh"
    }
  ],
  "presets": [
    {
      "name": "Custom Video",
      "category": "Media"
    }
  ]
}
{% endschema %}

{% style %}
  /* Mobile Styles */
  @media (max-width: 768px) {
    .custom-video-section {
      position: relative; /* Keep section scrollable */
      min-height: 40vh; /* Adjusted height for better mobile visibility */
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color: transparent; /* Ensure background is transparent */
      overflow: hidden;
    }

    .custom-video {
      position: absolute; /* Fix video to the section */
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1; /* Keep behind section content */
    }
  }

  /* Desktop Styles */
  @media (min-width: 769px) {
    .custom-video-section {
      position: relative;
      width: 100vw;
      min-height: 85vh; /* Slightly reduced height */
      overflow: hidden;
    }

    .custom-video-section video {
      position: absolute; /* Make sure video is only inside section */
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }
  }

  /* Ensure video is only visible inside section and not past footer */
  .custom-video {
    clip-path: inset(0 0 0 0); /* Prevents video from showing outside the section */
  }
{% endstyle %}
