<div class="custom-video-section">
  <video
    autoplay
    loop
    muted
    playsinline
    class="custom-video"
  >
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>

{% schema %}
{
  "name": "Custom Video Section",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile Video Height (vh)",
      "min": 20,
      "max": 100,
      "step": 1,
      "default": 35,
      "unit": "vh"
    }
  ],
  "presets": [
    {
      "name": "Custom Video",
      "category": "Media"
    }
  ]
}
{% endschema %}

{% style %}
  /* Mobile Styles */
  @media (max-width: 768px) {
    .custom-video-section {
      position: relative; /* Keep section scrollable */
      min-height: 50vh; /* Ensure section is visible */
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color: #000;
      overflow: hidden;
    }

    .custom-video {
      position: fixed; /* Fix video in place */
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      z-index: -1; /* Push behind section content */
    }
  }

  /* Desktop Styles */
  @media (min-width: 769px) {
    .custom-video-section {
      position: relative; /* Keep the section structure */
      width: 100vw;
      min-height: 100vh; /* Increased height for better fullscreen effect */
      overflow: hidden;
    }

    .custom-video-section video {
      position: fixed; /* Keep video fixed in background */
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100vw;
      height: 100vh; /* Ensure full screen height */
      object-fit: cover;
      z-index: -1; /* Keep video behind content */
    }
  }
{% endstyle %}
