<div class="custom-video-section">
  <video
    autoplay
    loop
    muted
    playsinline
    class="custom-video"
  >
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>

{% schema %}
{
  "name": "Custom Video Section",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile Video Height (vh)",
      "min": 20,
      "max": 100,
      "step": 1,
      "default": 35,
      "unit": "vh"
    }
  ],
  "presets": [
    {
      "name": "Custom Video",
      "category": "Media"
    }
  ]
}
{% endschema %}

{% style %}
  /* Mobile Styles */
  @media (max-width: 768px) {
    .custom-video-section {
      position: relative; /* Keep section scrollable */
      min-height: 40vh; /* Keep current section height */
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color: transparent;
      overflow: hidden;
    }

    .custom-video {
      position: fixed; /* Fix video in background */
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh; /* Ensure video is fully visible */
      object-fit: cover;
      z-index: -1; /* Keep behind section content */
    }
  }

  /* Desktop Styles */
  @media (min-width: 769px) {
    .custom-video-section {
      position: relative; /* Keep section structure */
      width: 100vw;
      min-height: 85vh; /* Adjusted height */
      overflow: hidden;
    }

    .custom-video {
      position: fixed; /* Ensure video stays fixed */
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh; /* Full viewport height */
      object-fit: cover;
      z-index: -1;
    }
  }

  /* Ensure video is not visible past the footer */
  footer, .page-wrapper {
    position: relative;
    z-index: 1; /* Ensure footer is above video */
    background-color: white; /* Adjust to match site theme */
  }
{% endstyle %}
