<div class="running-shoes-grid">
  <style>
    .running-shoes-grid {
      padding: 0;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      position: relative;
      background: #fff;
    }

    .table-wrapper {
      position: relative;
      background: #fff;
    }

    .table {
      display: grid;
      grid-template-columns: 80px repeat(3, 1fr);
      gap: 20px;
      min-width: 800px;
      background: #fff;
      position: relative;
    }

    .table-header {
      text-align: center;
      font-size: 30px;
      color: #000;
      text-transform: uppercase;
      padding: 10px 0;
      grid-column: span 1;
      position: relative;
      z-index: 1;
    }

    .brand-header {
      position: sticky;
      left: 0;
      background: #fff;
      z-index: 4;
      width: 80px;
      height: 100%;
      text-align: center;
      font-size: 30px;
      color: #000;
      text-transform: uppercase;
      padding: 10px 0;
    }

    .brand-cell {
      font-size: 20px;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      grid-column: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      position: sticky;
      left: 0;
      background: #fff;
      z-index: 3;
      width: 80px;
    }

    .brand-cell::after {
      content: '';
      position: absolute;
      right: 0;
      top: 10px;
      bottom: 10px;
      width: 1px;
      background: #000;
    }

    .brand-logo {
      max-width: 50px;
      height: auto;
    }

    .distance-cell {
      text-align: center;
      text-transform: uppercase;
      position: relative;
      z-index: 1;
    }

    .distance-cell .card-wrapper {
      max-width: 180px;
      margin: 0 auto;
    }

    @media (max-width: 768px) {
      .table {
        grid-template-columns: 100px repeat(3, 1fr);
        gap: 0;
      }

      .brand-cell {
        width: 100px;
      }

      .brand-header {
        width: 100px;
      }

      .brand-cell::after {
        top: 5px;
        bottom: 5px;
      }

      .table-header {
        font-size: 16px;
      }

      .brand-logo {
        max-width: 35px;
      }

      .running-shoes-grid {
        padding: 0;
      }

      .distance-cell {
        padding: 0;
      }

      .distance-cell .card-wrapper {
        max-width: 100px;
      }

      .card-information
        > *:not(.visually-hidden:first-child)
        + *:not(.rating):not(.card__information-volume-pricing-note) {
        margin-top: 0.3rem;
      }
    }

    @media (min-width: 769px) {
      .running-shoes-grid {
        padding: 0;
      }

      .distance-cell .card-wrapper {
        max-width: 250px;
      }
    }
  </style>

  {% assign brands = 'nike,newbalance' | split: ',' %}
  {% assign distance_names = 'half / marathon,speed,training' | split: ',' %}
  {% assign distances = '42k,10K,training' | split: ',' %}

  <div class="table-wrapper">
    <div class="table">
      <!-- Distance Headers -->
      <div class="brand-header">&nbsp;</div>
      {% for distance in distance_names %}
        <div
          class="table-header"
          {{ section.settings.heading_size -}}
          {% if settings.animations_reveal_on_scroll %}
            scroll-trigger animate--slide-in
          {% endif %}
          style="grid-column: {{ forloop.index | plus: 1 }}"
        >
          {{ distance | upcase }}
        </div>
      {% endfor %}

      <!-- Table Body -->
      {% for brand in brands %}
        <div class="brand-cell">
          <img
            src="{{ 'logo-' | append: brand | append: '.png' | asset_url }}"
            alt="{{ brand | capitalize }}"
            class="brand-logo"
          >
        </div>
        {% for distance in distances %}
          <div class="distance-cell">
            {% assign filtered_products = false %}
            {% for product in collections.shoes.products %}
              {% assign brand_tag = 'brand-' | append: brand %}
              {% assign distance_tag = 'distance-' | append: distance %}
              {% if product.tags contains brand_tag and product.tags contains distance_tag %}
                {% render 'card-product',
                  card_product: product,
                  media_aspect_ratio: 'square',
                  image_shape: 'default',
                  show_secondary_image: false,
                  show_vendor: false,
                  show_rating: false
                %}
                {% assign filtered_products = true %}
              {% endif %}
            {% endfor %}
            {% unless filtered_products %}
              <p>No products available</p>
            {% endunless %}
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Running Shoes Grid",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "SHOES"
    }
  ],
  "presets": [
    {
      "name": "Running Shoes Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
