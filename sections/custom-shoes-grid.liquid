<div class="running-shoes-grid">
  <style>
    .running-shoes-grid {
      padding: 20px;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      position: relative;
      background: #fff;
    }

    .running-shoes-grid::before {
      content: '';
      position: absolute; /* Changed from fixed to absolute */
      left: 0;
      top: 0;
      height: 100%; /* Changed from 100vh to 100% */
      width: 20px;
      background: #fff;
      z-index: 4;
    }

    .image-section {
      width: 100%;
      height: 300px;
      object-fit: cover;
      object-position: center;
      margin-bottom: 20px;
    }

    .table {
      display: grid;
      grid-template-columns: 120px repeat(3, 1fr); /* Wider brand column on desktop */
      gap: 20px;
      min-width: 800px;
      background: #fff;
    }

    .table-header {
      text-align: center;
      font-size: 24px; /* Reduced from 30px */
      color: #000;
      text-transform: uppercase;
      padding: 10px 0;
      grid-column: span 1;
    }

    /* Brand header cell that stays fixed */
    .brand-header {
      position: sticky;
      left: 0;
      background: #fff;
      z-index: 5; /* Higher than the scrolling headers */
      width: 120px;
      height: 100%;
    }

    .brand-cell {
      font-size: 20px;
      font-weight: bold;
      text-transform: uppercase;
      border-right: 1px solid #000;
      text-align: center;
      grid-column: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      position: sticky;
      left: 0;
      background: #fff;
      z-index: 3;
      width: 120px;
    }

    .brand-logo {
      max-width: 50px;
      height: auto;
    }

    .distance-cell {
      text-align: center;
      text-transform: uppercase;
    }

    .distance-cell .card-wrapper {
      max-width: 200px;
      margin: 0 auto;
    }

    @media (max-width: 768px) {
      .table {
        grid-template-columns: 80px repeat(3, 1fr); /* Adjusted brand column width */
        gap: 0; /* Removed gap on mobile */
      }

      .brand-cell {
        width: 100px;
      }

      .brand-header {
        width: 100px;
        background: #fff;
      }

      .table-header {
        font-size: 14px;
        padding: 5px 0;
      }

      .brand-logo {
        max-width: 35px;
      }

      .running-shoes-grid {
        padding: 10px;
      }

      .distance-cell .card-wrapper {
        max-width: 100px;
      }
    }

    @media (min-width: 769px) {
      .running-shoes-grid {
        padding: 50px;
      }

      .running-shoes-grid::before {
        width: 50px;
      }

      .distance-cell .card-wrapper {
        max-width: 300px;
      }

      .table {
        gap: 20px;
      }
    }
  </style>

  {% assign brands = 'nike,newbalance' | split: ',' %}
  {% assign distance_names = 'half / marathon,speed,training' | split: ',' %}
  {% assign distances = '42k,10K,training' | split: ',' %}

  <div class="table">
    <!-- Distance Headers -->
    <div class="table-header brand-header"></div>
    {% for distance in distance_names %}
      <div
        class="table-header"
        {{ section.settings.heading_size -}}
        {% if settings.animations_reveal_on_scroll %}
          scroll-trigger animate--slide-in
        {% endif %}
        style="grid-column: {{ forloop.index | plus: 1 }}"
      >
        {{ distance | upcase }}
      </div>
    {% endfor %}

    <!-- Table Body -->
    {% for brand in brands %}
      <div class="brand-cell">
        <img
          src="{{ 'logo-' | append: brand | append: '.png' | asset_url }}"
          alt="{{ brand | capitalize }}"
          class="brand-logo"
        >
      </div>
      {% for distance in distances %}
        <div class="distance-cell">
          {% assign filtered_products = false %}
          {% for product in collections.shoes.products %}
            {% assign brand_tag = 'brand-' | append: brand %}
            {% assign distance_tag = 'distance-' | append: distance %}
            {% if product.tags contains brand_tag and product.tags contains distance_tag %}
              {% render 'card-product',
                card_product: product,
                media_aspect_ratio: 'square',
                image_shape: 'default',
                show_secondary_image: false,
                show_vendor: false,
                show_rating: false
              %}
              {% assign filtered_products = true %}
            {% endif %}
          {% endfor %}
          {% unless filtered_products %}
            <p>No products available</p>
          {% endunless %}
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Running Shoes Grid",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "SHOES"
    }
  ],
  "presets": [
    {
      "name": "Running Shoes Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
